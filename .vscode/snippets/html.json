	},
	"Radio buttons": {
		"prefix": "radio",
		"body": [
			"<div class=\"options\">",
			"\t<div class=\"options__item\">",
			"\t\t<input id=\"${3:radio1}\" class=\"options__input input-reset\" name=\"${1:radio-group}\" type=\"radio\" ${7:required} checked>",
			"\t\t<label class=\"options__label ${2:visually-hidden}\" for=\"${3:radio1}\">$4</label>",
			"\t</div>",
			"\t<div class=\"options__item\">",
			"\t\t<input id=\"${5:radio2}\" class=\"options__input input-reset\" name=\"${1:radio-group}\" type=\"radio\" ${7:required}>",
			"\t\t<label class=\"options__label ${2:visually-hidden}\" for=\"${5:radio2}\">$6</label>",
			"\t</div>",
			"</div>"
		],
		"description": "Radio buttons snippet"
	},
	"CheckBox": {
		"prefix": "checkbox",
		"body": [
			"<div class=\"checkbox\">",
			"\t<input id=\"${1:checkbox}\" class=\"checkbox__input\" type=\"checkbox\" name=\"agree_checkbox\" data-required data-validate=\"true\"",
			"\t<label for=\"${1:checkbox}\" class=\"checkbox__label\">",
      "\t\t<svg viewBox=\"0 0 21 21\">",
      "\t\t\t<path d=\"M5,10.75 L8.5,14.25 L19.4,2.3 C18.8333333,1.43333333 18.0333333,1 17,1 L4,1 C2.35,1 1,2.35 1,4 L1,17 C1,18.65 2.35,20 4,20 L17,20 C18.65,20 20,18.65 20,17 L20,7.99769186\"></path>",
      "\t\t</svg>",
      "\t\t<span class=\"checkbox__text\">${2:Text}</span></label>",
			"</div>"
			],
		"description": "Custom checkbox"
	},
	"Button": {
		"prefix": "button",
		"body": "<button class=\"button-style btn-reset\">$1</button>",
		"description": "Standard button snippet"
	},
