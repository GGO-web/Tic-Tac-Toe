  "Add input file": {
		"prefix": "input-file",
		"body": [
      "<div class=\"file\">",
      "\t<div class=\"file__item\">",
      "\t\t<input class=\"file__input\" accept=\".pdf, .docx, .jpg, .png, .webp\" type=\"file\" multiple name=\"files[]\">",
      "\t\t<button type=\"button\" tabindex=\"-1\" class=\"file__button btn-reset\">Choose</button>",
      "\t\t<span class=\"file__chosen\">No files chosen</span>",
      "\t</div>",
      "</div>"
    ]
  },
  "Add textarea message": {
		"prefix": "input-message",
		"body": [
      "<label class=\"visually-hidden\" for=\"$1\">$2</label>",
      "<textarea id=\"$1\" class=\"input-style input-message input-reset\" name=\"message\" placeholder=\"Message\" data-required=\"message\" data-validate=\"true\"></textarea>"
    ]
  },
	"Quantity": {
		"scope": "html,kit",
		"prefix": "quantity",
		"body": [
			"<div class=\"quantity\">",
      "\t<button type=\"button\" class=\"quantity__button quantity__button_minus btn-reset\">-</button>",
      "\t<input class=\"input-reset quantity__input\" type=\"number\" min=\"1\" max=\"50\" name=\"quantity\" value=\"1\">",
      "\t<button type=\"button\" class=\"quantity__button quantity__button_plus btn-reset\">+</button>",
      "</div>"
		],
		"description": "Quantity input component"
	},
	"Textarea": {
		"prefix": "textarea",
		"body": "<textarea name=\"${1:message}\" placeholder=\"$2\" class=\"input-style input-reset\" ${3:data-validate=\"message\"}></textarea>",
		"description": "Form textarea"
	},
	"Select": {
		"prefix": "select",
		"body": [
			"<select class=\"product__form-select\" name=\"${1:select}\">",
			"\t<option value=\"\" selected>${2:Select title}</option>",
			"\t<option value=\"1\">$3</option>",
			"\t<option value=\"2\">$4</option>",
			"</select>"
		],
		"description": "Custom select"
	},
	"Form fieldset": {
